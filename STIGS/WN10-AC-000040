

# Define the registry path for password policy
$regPath = "HKLM:\SOFTWARE\Microsoft\Windows NT\CurrentVersion\PasswordPolicies"
$regKey = "PasswordComplexity"
$complexityEnabled = 1  # 1 means enabled, 0 means disabled

# Check if the registry path exists
if (-not (Test-Path $regPath)) {
    Write-Host "Registry path does not exist. Creating the path..."
    # Create the registry path if it doesn't exist
    New-Item -Path $regPath -Force | Out-Null
}

# Set the password complexity requirement to enabled
Write-Host "Enabling Password Complexity Requirements..."
Set-ItemProperty -Path $regPath -Name $regKey -Value $complexityEnabled -Type DWord

# Confirm the change
Write-Host "Password complexity requirements have been enabled."

# Force Group Policy Update to Apply the Change Immediately
gpupdate /force
Write-Host "Group Policy has been updated."


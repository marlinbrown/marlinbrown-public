

# Define the registry path for password policy
$regPath = "HKLM:\SOFTWARE\Microsoft\Windows NT\CurrentVersion\PasswordPolicies"
$regKey = "HistorySize"
$historyValue = 24

# Check if the registry path exists
if (-not (Test-Path $regPath)) {
    Write-Host "Registry path does not exist. Creating the path..."
    # Create the registry path if it doesn't exist
    New-Item -Path $regPath -Force | Out-Null
}

# Set the password history size to 24
Write-Host "Setting Password History to $historyValue passwords..."
Set-ItemProperty -Path $regPath -Name $regKey -Value $historyValue -Type DWord

# Confirm the change
Write-Host "Password History has been set to $historyValue passwords."
